# 应用配置
APP_NAME=academic-system
DEBUG=true
LOG_LEVEL=INFO

# 数据库配置
DATABASE_URL=mysql+pymysql://root:qazplm200527tygv@localhost/academic_system
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis配置（用于缓存和会话存储）
#REDIS_URL=redis://localhost:6379/0
#REDIS_PASSWORD=
#REDIS_DB=0

# 认证配置
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
TOKEN_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=86400

# OAuth2配置
OAUTH_SERVER_URL=https://auth.localhost:5000
CLIENT_ID=academic-app
CLIENT_SECRET=academic-secret
CA_CERT_PATH=certs/ca.crt

# SSL/TLS配置
SSL_ENABLED=true
CERT_PATH=certs/academic-api.crt
KEY_PATH=certs/academic-api.key

# 文件存储配置
STORAGE_TYPE=local
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx,xls,xlsx,ppt,pptx,zip,rar,mp3,mp4,avi,mov,py,js,html,css,json,xml

# 云存储配置（如果使用云存储）
# AWS S3配置
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Azure Blob Storage配置
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=

# Google Cloud Storage配置
GOOGLE_APPLICATION_CREDENTIALS=
GCS_BUCKET=

# 速率限制配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST_SIZE=10

# CORS配置
CORS_ALLOWED_ORIGINS=https://academic.localhost:4174,https://cloud.localhost:4176
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Client-Cert,X-Client-Cert-Fingerprint
CORS_SUPPORTS_CREDENTIALS=true

# 邮件配置（用于通知）
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@academic-system.com

# 日志配置
LOG_FILE=logs/academic-api.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 安全配置
CSRF_SECRET=your-csrf-secret-change-in-production
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# 开发环境配置
DEVELOPMENT_MODE=false
MOCK_EXTERNAL_SERVICES=false
TEST_DATABASE_URL=sqlite:///test.db